<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dice</title>
    <link rel="stylesheet" href="/css/style3.css">
  </head>
  <body>
  <% x = parseInt(x) %>
  <% array = [] %>
  <% var sum = 0 %> 
  <% for (var i= 0; i < x; i++){ %> 
  <% var dice; %>
  <% var roll =  Math.floor(Math.random()*6) +1 %>
    <%  switch (roll) {
              case 1:
              dice = 'roll1';
              break;
              case 2:
              dice = 'roll2';
              break;
              case 3:
              dice = 'roll3';
              break;
              case 4:
              dice = 'roll4';
              break;
              case 5:
              dice = 'roll5';
              break;
              case 6:
              dice = 'roll6';
              } %>
              <div class="<%= dice %>"> </div>
              <% array.push(roll) %>
               <% sum += array[i]; %>
        <% } %>
        <p> <%= sum %> </p>
  </body>
</html>
